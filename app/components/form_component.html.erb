
<div class="my-16 mb-36">
  <%= form_with(model: @object) do |form| %>
    <%= form.text_field :title, {:class => "w-full title bg-gray-100 border border-gray-300 p-2 mb-4 outline-none", :spellcheck => "false", :placeholder => "Title", :type => "text"} %>

    <%= form.text_area :content, {:class => "w-full description bg-gray-100 sec p-3 h-60 border border-gray-300 outline-none"} %>

    <%= form.submit 'Post', :class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded float-right"%>
  <% end %>
</div>  
